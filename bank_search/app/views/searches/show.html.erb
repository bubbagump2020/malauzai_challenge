   <h3>Malauzai Code Challenge</h3>
   <p>Search for <%= @search.name %>
   <div id="map"></div>
   <script>
        function initMap(){
            let location = {lat: <%= raw @search.latitude %>, lng: <%= raw @search.longitude %>}
            let map = new google.maps.Map(
                document.getElementById('map'), {zoom: 4, center: location}
            )
            let marker = new google.maps.Marker({position: location, map: map})
        }
   </script>
   <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBAnEpGMdG4aeb-chrxedvGa74BYhpY2DI&callback=initMap"></script>
